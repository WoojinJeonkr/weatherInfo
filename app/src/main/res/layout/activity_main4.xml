<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Main4Activity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="기상청 목록"
        android:textAlignment="center"
        android:textColor="#9C27B0"
        android:textSize="24sp"
        android:textStyle="bold" />

    <ImageView
        android:id="@+id/imageView4"
        android:layout_width="match_parent"
        android:layout_height="143dp"
        app:srcCompat="@drawable/suncloud" />

    <Button
        android:id="@+id/m1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#B2D4EE"
        android:text="한국"
        android:textAlignment="center"
        android:textColor="#009688"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/m2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#C0A5F0"
        android:text="미국"
        android:textAlignment="center"
        android:textColor="#3F51B5"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/m3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#C7F098"
        android:text="일본"
        android:textAlignment="center"
        android:textColor="#2196F3"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/m4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#92E4DC"
        android:text="중국"
        android:textAlignment="center"
        android:textColor="#9C27B0"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/m5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F5DF9C"
        android:text="영국"
        android:textAlignment="center"
        android:textColor="#673AB7"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/m6"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#F3BAA8"
        android:text="프랑스"
        android:textAlignment="center"
        android:textColor="#2139BB"
        android:textSize="24sp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/m7"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#FCF29B"
        android:text="세계기상기구WMO"
        android:textAlignment="center"
        android:textColor="#550808"
        android:textSize="24sp"
        android:textStyle="bold" />
</LinearLayout>